{
  "parser": "babel-eslint",
  "plugins": ["node", "flowtype"],
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:flowtype/recommended"],
  "rules": {
    "node/exports-style": ["error", "module.exports"],
    "node/no-unsupported-features": "off",
    "semi": ["error", "never"],
    "no-console": "off",
    "quotes": ["error", "single"]
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "it": false,
    "describe": false
  }
}
